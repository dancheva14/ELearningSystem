@model ELearningSystem.Model.Lecture
@{
    ViewBag.Title = "AddLecture";
}

<h2>@Resources.Resource.strAddLecture</h2>
@using (Html.BeginForm())
{
    <div>
        <fieldset>
            @Html.HiddenFor(m => m.CourseId)
            <div class="form-group">
                <div>
                    <label class="col-lg-10 control-label" for="inputEmail">@Resources.Resource.strLectureName</label>
                </div>
                <div class="col-lg-10">
                    @Html.TextBoxFor(s => s.Title)
                    @Html.ValidationMessageFor(s => s.Title)
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-10 control-label" for="textArea">@Resources.Resource.strLectureDescription</label>
                <div class="col-lg-10">
                    @Html.TextAreaFor(model => model.Content, 10, 40, htmlAttributes: new { style = "width: 100%; max-width: 100%;" })
                    <span class="help-block">@Resources.Resource.strInsertLectureDescription</span>
                </div>
            </div>


            <div>
                <input class="col-lg-10" type="submit" value="@Resources.Resource.strSave" />
            </div>
        </fieldset>
    </div>
}
