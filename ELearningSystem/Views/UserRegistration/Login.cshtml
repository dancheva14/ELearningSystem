@model ELearningSystem.Model.Student
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <div style="float: left">
        @using (Html.BeginForm("Login", "UserRegistration", new { ReturnUrl = ViewBag.ReturnUrl as string }, FormMethod.Post))
        {
            <div>
                <fieldset>
                    <legend style=" font-size:large"><b>@Resources.Resource.strProfileLogin</b></legend>
                    <span>@Html.ValidationSummary()</span>
                    <div class="form-group">
                        <div>
                            <label class="col-lg-10 control-label" for="inputUsername">@Resources.Resource.strUserName</label>
                        </div>
                        <div class="col-lg-10">
                            @Html.TextBoxFor(s => s.UserName)
                            @Html.ValidationMessageFor(s => s.UserName)
                        </div>
                    </div>
                    <div class="form-group">
                        <div>
                            <label class="col-lg-10 control-label" for="password">@Resources.Resource.strPassword</label>
                        </div>
                        <div class="col-lg-10">
                            @Html.PasswordFor(s => s.Password)
                            @Html.ValidationMessageFor(s => s.Password)
                        </div>
                    </div>
                    <div class="divider">

                    </div>
                    <div class="login-button-container">
                        <button class="btn btn-default col-lg-12"   type="submit"> @Resources.Resource.strSave</button>
                    </div>
                </fieldset>
            </div>
        }
    </div>
    <div style="float: right; height: 120px; width: 400px; margin: 5px; border-style: outset">
        <p></p>
        <div>
            Въведете потребителско име и парола.
            Ако нямате регистрация, можете лесно да се регистрирате в меню "Регистрация"
            или използвайки линка @Html.ActionLink("Регистрирай като нов потребител", "Registration", "UserRegistration")
        </div>
    </div>
</div>
