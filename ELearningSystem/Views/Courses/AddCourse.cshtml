@model ELearningSystem.Model.Course
@{
    ViewBag.Title = "AddCourse";
}
<h2>@Resources.Resource.strAddCourse</h2>
@using (Html.BeginForm())
{
    <div>
        <fieldset>
            @Html.HiddenFor(m => m.Id)
            <div class="form-group">
                <div>
                    <label class="col-lg-10 control-label" for="inputEmail">@Resources.Resource.strCourseName</label>
                </div>
                <div class="col-lg-10">
                    @Html.TextBoxFor(s => s.Name)
                    @Html.ValidationMessageFor(s => s.Name)
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-10 control-label" for="textArea">@Resources.Resource.strCourseContent</label>
                <div class="col-lg-10">
                    @Html.TextAreaFor(model => model.Summary, 10, 40, htmlAttributes: new { style = "width: 100%; max-width: 100%;" })
                    <span class="help-block">@Resources.Resource.strInsertCourseDescription</span>
                </div>
            </div>
            <div>
                <input class="col-lg-10" type="submit" value=@Resources.Resource.strSave />
            </div>
        </fieldset>
    </div>
}
